createTunnel() {
    /usr/bin/ssh -N -R {{ builder_tunnel_port_remote }}:localhost:22 {{ marina.registry.domain }}
    if [[ $? -eq 0 ]]; then
        echo Tunnel to {{marina.registry.domain}} created successfully
    else
        echo An error occurred creating a tunnel to sh -R {{ builder_tunnel_port_remote }}:localhost:22 {{ marina.registry.domain }} RC was $?
    fi
}
## Run the 'ls' command remotely.  If it returns non-zero, then create a new connection
/usr/bin/ssh {{marina.registry.domain}} ssh -p 4422 localhost hostname
if [[ $? -ne 0 ]]; then
    echo Creating new tunnel connection
    createTunnel
fi
